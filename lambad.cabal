-- 
--   build-depends:
--     lambad,
--     base >= 3 && <5,
--     text >= 0.11.2.0,
--     attoparsec >= 0.10.1.0
-- 
-- executable lambad-eval
--   main-is: eval.hs
--   hs-source-dirs: bin
-- 
--   build-depends:
--     lambad,
--     base >= 3 && <5,
--     text >= 0.11.2.0,
--     attoparsec >= 0.10.1.0

library
  hs-source-dirs: src

  build-depends:
    mtl >= 2.1.0,
    base >= 3 && <5,
    text >= 0.11.2.0,
    pretty >= 1.1.1.0,
    attoparsec >= 0.10.1.0,
    containers >= 0.4.2.0

  exposed-modules:
    Lambad.Misc
    Lambad.Pretty
    Lambad.Pure.Repl
    Lambad.Pure.Eval
    Lambad.Pure.Syntax
    Lambad.Pure.Parser
    Lambad.Pure.Machines.CEK
    Lambad.Pure.Machines.CEKGo
    Lambad.Pure.Compilers.JavaScript
    Lambad.DeBruijn.Compile
    Lambad.DeBruijn.Eval
    Lambad.DeBruijn.Syntax

