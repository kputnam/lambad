version:        0.0.0
cabal-version:  >= 1.8
license:        BSD3
license-file:   LICENSE.md
author:         Kyle Putnam <putnam.kyle@gmail.com>
maintainer:     Kyle Putnam <putnam.kyle@gmail.com>
homepage:       https://github.com/kputnam/lambad
category:       Language
build-type:     Simple
synopsis:       Lambad programming language
description:
  Lambad programming language

-- executable lambad-parse
--   main-is: parse.hs
